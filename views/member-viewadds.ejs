        </style>

        <title> List of Vehicles </title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    

    <body class="mainhead">
        <nav class="navbar" style="padding: 1%;box-shadow: 0 0 1rem 0 rgba(0, 0, 0, .2); 
    
      
    background-color: rgba(255, 255, 255, .15);
        
        backdrop-filter: blur(5px);border-radius: 20px;
        
        ">
        <form action="/member/search">
            <!--   <div class="search_wrap search_wrap_3">
                  <div class="search_box"> -->
                      <input type="text" class="input" placeholder="search..." style="border: none;width: 300px;background-color: transparent;resize: none;outline: none;font-size: 25px;border-bottom: 1px solid rgb(87, 87, 87);font-family: sans-serif;color: white;" name="name" id="name" required>
                      <span class="underline"></span>
                      <div class="btn btn_common">
                          <button type="submit" style="border: none;background-color:transparent"><img src="https://www.freepnglogos.com/uploads/search-png/search-icons-icons-flat-jewels-icon-11.png" alt="" style="width: 45px;height: 45px;"></button>
                      </div>
              <!--     </div>
              </div> --></form>
          
          
            <button class="btn btn-success btnAction" onclick="window.location.href = 'uploadview';">Create Info</button>
            <button class="btn btn-warning btnAction" onclick="window.location.href = 'dadd';">Destroy adds</button>
            <button class="btn btn-info btnAction" onclick="window.location.href = 'dacc';">Destroy account</button>
            <button style="background-color: rgb(187,134,252,255);border: none;" class="btn btn-info btnAction" onclick="window.location.href = 'uacc';">Update profile</button>
            <button style="background-color: rgb(0, 136, 255);border: none;" class="btn btn-info btnAction" onclick="window.location.href = 'updatepimage';">Update profile pic</button>
            <button class="btn btn-danger btnAction" onclick="window.location.href = 'logout';" style="margin-left: 20%;">Logout</button>
          </nav>
        <br>
        <table class="table" style="text-align: center;margin-top:2%;box-shadow: 0 0 1rem 0 rgba(0, 0, 0, .2); 
    
      background-color: white; backdrop-filter: blur(5px);">
            <span style="font-size: 25px;color:rgb(255, 255, 255);font-family:sans-serif"> Vehicle Info <b></b> </span>
            
            <thead class="thead-dark">
            <tr style="color: black;font-weight: bolder;">
                <th>Rt.no </th>
                <th>Description</th>
                <th>In Time</th>
                
                <th> Image</th>
                <th> View Image</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
            <%
            if( data.length > 0 )
            {
                data.forEach(function (data){
                    
                    %> 

                    <tr style="color: rgb(0, 0, 0);border: none;">
                        <% var imageurl = "/media/"+data._id+"."+data.image %>
                        <td><%=data.Rt_no%></td>
                        <td><%=data.description%></td>
                        <td><% var dObj = new Date(data.timestamp)
                            var date = dObj.getDate()+"/"+(dObj.getMonth()+1)+"/"+dObj.getFullYear()+" "+ dObj.getHours()+":"+dObj.getMinutes()+":"+dObj.getSeconds() %>
                            <%=date%></td>
                            
                           
                             <td><img src=<%= imageurl %>  style="width:150px;height:150px;" /></td>
                             <td><a  class="" href="/member/view/<%=data._id%>"> view </a></td>
                            <td><a  class="" href="/member/delete/<%=data._id%>"> delete </a></td>
                            <td><a  class="" href="/member/updatedet/<%=data._id%>"> update details </a></td>
                            <td><a  class="" href="/member/updateimg/<%=data._id%>"> update image </a> </td> 
                           
                    </tr>

                    <%

                })
            }
            %>
        </table>
    </body>
</html>
