    <body>
        <form action="/member/loginverify" method="post" class="formdes">
            <h3 style="color: rgb(0, 0, 0);font-family: sans-serif;font-weight: bolder;"><center>Member Login</center></h3><br>
              <div class="mb-3">
                <label style="color: rgb(0, 0, 0);">Member Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter  Email" required>
              </div>
              <div class="mb-3">
                <label style="color: rgb(0, 0, 0);">Member Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter  Password" required>
              </div>
              <button type="submit" class="btn btn-primary w-100">Login</button> <br> <br>
              <div style="text-align: center;font-size: 18px; color: rgb(255, 255, 255);"><a href="/member/member-register" style="color: rgb(17, 0, 255);">New User? Register Here</a></div>
              <div style="text-align: center;font-size: 18px; color: rgb(255, 255, 255);"><a href="/member/member-forgotpassword" style="color:rgb(17, 0, 255);">Forgot Password?</a></div>
          </form>
