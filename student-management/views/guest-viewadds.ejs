           <form action="/guest/search">
          <!--   <div class="search_wrap search_wrap_3">
                <div class="search_box"> -->
                    <input type="text" class="input" placeholder="search..." style="border: none;width: 300px;background-color: transparent;resize: none;outline: none;font-size: 25px;border-bottom: 1px solid rgb(87, 87, 87);font-family: sans-serif;color: white;" name="name" id="name">
                    <span class="underline"></span>
                    <div class="btn btn_common">
                        <button type="submit" style="border: none;background-color:transparent"><img src="https://www.freepnglogos.com/uploads/search-png/search-icons-icons-flat-jewels-icon-11.png" alt="" style="width: 45px;height: 45px;"></button>
                    </div>
            <!--     </div>
            </div> --></form>
            

            <button style="background-color: transparent;border: none;font-size: 25px;font-weight: bolder;color:maroon;font-style: italic;" class="btn btn-success btnAction" onclick="window.location.href = 'enter';" >Home</button>
           
            <button class="btn btn-danger btnAction" onclick="window.location.href = 'logout';" style="margin-left: 20%;">Logout</button>
          </nav>
        <br>
        <table class="table" style="text-align: center;margin-top:2%;box-shadow: 0 0 1rem 0 rgba(0, 0, 0, .2); 
    
        background-color: white;">
        
            <span style="font-size: 25px;color:rgb(255, 255, 255);font-family:sans-serif;"> your feed <b></b> </span>
            
            <thead class="thead-dark">
            <tr>
                <th>Name </th>
                <th>Description</th>
                <th>Time Created</th>
                <th>Price</th>
                <th>Image</th>
                <th>View</th>
                <th>Contact</th>
                
            </tr>
        </thead>
            <%
            if( addData.length > 0 )
            {
                addData.forEach(function (data){
                    
                    %>

                    <tr style="color: rgb(0, 0, 0);">
                        <% var imageurl = "/media/"+data._id+"."+data.image %>
                        <td><%=data.name%></td>
                        <td><%=data.description%></td>
                        <td><% var dObj = new Date(data.timestamp)
                            var date = dObj.getDate()+"/"+(dObj.getMonth()+1)+"/"+dObj.getFullYear()+" "+ dObj.getHours()+":"+dObj.getMinutes()+":"+dObj.getSeconds() %>
                            <%=date%></td>
                        <td><%=data.price%>â‚¹</td>
                        <td><img src=<%= imageurl %>  style="width:150px;height:150px;" /></td>
                        <td><a class="" href="/guest/view/<%=data._id%>"> view </a></td>
                        <td><a class="" href="/guest/contact/<%=data._id%>"> contact </a></td>
                       
                           
                           
                    </tr>

                    <%

                })
            }
          
            else{ %>
            <h1 style="color: grey;">no adds found</h1>
            <% }
            %>
        </table>
